<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_identity"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <ImageView
        android:id="@+id/icon_router"
        android:layout_width="50dp"
        android:layout_height="60dp"
        android:src="@drawable/ic_menu_router"
        app:layout_constraintBottom_toBottomOf="@+id/create_at"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/display"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/create_at"
        app:layout_constraintEnd_toStartOf="@+id/create_at"
        app:layout_constraintStart_toEndOf="@+id/icon_router"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="TEST" />

    <TextView
        android:id="@+id/create_at"
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:textSize="14sp"
        app:layout_constraintEnd_toStartOf="@id/is_using"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="2020-09-23 12:34:56"

        />

    <Button
        android:id="@+id/is_using"
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:gravity="center"
        android:textSize="14sp"
        android:text="使用中"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
    />
</androidx.constraintlayout.widget.ConstraintLayout>